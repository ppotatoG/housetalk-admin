{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/pageLayout": ["src/app/pageLayout/index.tsx"],
      "@/component/*": ["src/app/component/*"],
      "@/constants/*": ["src/constants/*"],
      "@/constants": ["src/constants/index.ts"],
      "@/utils/*": ["src/utils/*"],
      "@/slices/*": ["src/slices/*"],
      "@/store": ["src/store"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/interceptors": ["src/api/interceptors"],
      "@/api/*": ["src/api/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
